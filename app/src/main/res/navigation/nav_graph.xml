<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MoviesListFragment">

    <fragment
        android:id="@+id/MoviesListFragment"
        android:name="be.maximedupierreux.themoviedbclient.movies.MoviesListFragment"
        android:label="@string/movies_list_fragment_label"
        tools:layout="@layout/movies_list">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/MovieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/MovieDetailsFragment"
        android:name="be.maximedupierreux.themoviedbclient.MovieDetailFragment"
        android:label="@string/movie_details_fragment_label"
        tools:layout="@layout/movie_details_fragment">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/MoviesListFragment" />
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>
</navigation>